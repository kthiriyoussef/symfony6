{% extends 'base.html.twig' %}
{% block title%} Liste des Articles{% endblock %}
{% block body %}
{{ form_start(form) }}
<div class="form-row align-items-end" >
<div class="form-group">
 {{ form_row(form.nom) }}
</div>
 
 <div class="form-group">
 <button type="submit" class="btn btn-success">Rechercher</button>
 
</div>
</div>
{{ form_end(form) }}
{% if articles %}
 <table id="articles" class="table table-striped">
 <thead>
 <tr>
 <th>Nom</th>
 <th>Prix</th>
 <th>Cat</th>
 <th>details</th>
 <th>edit</th>
 <th>delete</th>
 </tr>
 </thead>
 <tbody>
 {% for article in articles %}
 <tr>
 <td>{{ article.nom }}</td>
 <td>{{ article.prix }}</td>
 <td>{{ article.category.titre }}</td>
 <td>
 <a href="/article/{{ article.id }}" class="btn btn-dark">Détails</a></td>
 <td><a href="/article/edit/{{ article.id }}" class="btn btn-dark">Modifier</a></td>
 <td><a href="/article/delete/{{ article.id }}" class="btn btn-danger"onclick="return confirm('Etesvous sûr de supprimer cet article?');">Supprimer</a>
 </td>
 
 </tr>
 {% endfor %}
 </tbody>
 </table>
 {% else %}
 <p>Aucun articles</p>
 {% endif %}
{% endblock %}
